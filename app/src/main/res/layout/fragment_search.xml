<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.search.fragment.SearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-50dp"
        android:src="@drawable/rec_bg"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_160sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fruit_light_blue"
            app:boxStrokeColor="@color/fruit_light_blue"
            app:hintTextColor="@color/fruit_light_dark_blue"

            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edT_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_search"
                android:hint="Поиск"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/fruit_grey"
                android:textColorHint="@color/fruit_grey"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:id="@+id/search_overView"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mcv_search"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Добро пожаловать в Бозорбек. Найдите продукты которые вам нужны."
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:elevation="@dimen/_10sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_overView"
        android:id="@+id/fb_go_next"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_arrow_forward"
        android:backgroundTint="#A3D8CE"
        android:layout_margin="@dimen/_20sdp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Перейти в главную"
        app:layout_constraintEnd_toStartOf="@id/fb_go_next"
        app:layout_constraintTop_toTopOf="@id/fb_go_next"
        app:layout_constraintBottom_toBottomOf="@id/fb_go_next"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>