<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_155sdp"
    android:layout_height="@dimen/_220sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:id="@+id/catalog_product_constraint"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_product_cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        app:cardBackgroundColor="@color/fruit_yellow_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_catalog_product_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ex_fruit4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/item_product_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ex_shadow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_catalog_product_image" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_basket_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_catalog_product_image"
                android:layout_marginTop="25dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_catalog_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Авакадо"
                android:textColor="@color/fruit_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_product_shadow" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_catalog_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:alpha="0.4"
                android:text="Органик продукт"
                android:textColor="@color/fruit_grey"
                android:textSize="9sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_catalog_product_title" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_catalog_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="40.000"
                android:textColor="@color/fruit_grey"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_catalog_product_name" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Сум"
                android:textColor="@color/fruit_grey"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@id/item_catalog_product_price"
                app:layout_constraintStart_toEndOf="@id/item_catalog_product_price"
                app:layout_constraintTop_toTopOf="@id/item_catalog_product_price" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_catalog_product_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="15.000 Сум"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialTextView" />

            <View
                android:id="@+id/view_red_line"
                android:layout_width="60dp"
                android:layout_height="0.5dp"
                android:background="@android:color/holo_red_light"
                app:layout_constraintBottom_toBottomOf="@id/item_catalog_product_discount"
                app:layout_constraintEnd_toEndOf="@id/item_catalog_product_discount"
                app:layout_constraintStart_toStartOf="@id/item_catalog_product_discount"
                app:layout_constraintTop_toTopOf="@id/item_catalog_product_discount" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_catalog_product_second_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:alpha="0.4"
                android:text="40.000"
                android:textColor="@color/fruit_grey"
                android:textSize="9sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_catalog_product_price" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:alpha="0.4"
                android:text="Сум - за 1кг"
                android:textColor="#42445A"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/item_catalog_product_second_price"
                app:layout_constraintStart_toEndOf="@id/item_catalog_product_second_price"
                app:layout_constraintTop_toBottomOf="@id/item_catalog_product_price" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>